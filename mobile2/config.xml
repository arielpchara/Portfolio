<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pchara.ariel" version="0.0.1"
	xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>Ariel Pchara</name>
	<description>
		Meu portifolio
	</description>
	<author email="ariel@pchara.com" href="http://ariel.pchara.com">
		Ariel Pchara
	</author>
	<content src="index.html" />
	<access origin="*" />
	<preference name="Fullscreen" value="true" />
	<preference name="Orientation" value="portrait" />
	<preference name="BackgroundColor" value="0xffffffff"/>
	<preference name="HideKeyboardFormAccessoryBar" value="false"/>

	<platform name="android">
	    
        <icon src="www/res/icons/android/ldpi.png" density="ldpi" />
        <icon src="www/res/icons/android/mdpi.png" density="mdpi" />
        <icon src="www/res/icons/android/hdpi.png" density="hdpi" />
        <icon src="www/res/icons/android/xhdpi.png" density="xhdpi" />
    
	    <preference name="SplashScreen" value="screen" />
	    <preference name="SplashScreenDelay" value="10000" />
	    
		<config-file target="config.xml" parent="/*">
			<feature name="SplashScreen">
				<param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
			</feature>
		</config-file>
	</platform>

</widget>
